<?xml version="1.0" encoding="utf-8"?>


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"


        android:layout_height="match_parent"
        android:orientation="vertical">

        <GridView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/mainview"
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1"
            android:numColumns="2"
            tools:context="com.example.aniket.movietime.MainActivity"
            tools:ignore="Suspicious0dp" />

        <LinearLayout xmlns:android="http://schemas.android.com/tools"
            xmlns:android1="http://schemas.android.com/apk/res/android"

            android1:id="@+id/linearLayout"

            android1:layout_width="match_parent"

            android1:layout_height="wrap_content"


            android1:orientation="horizontal"

            android1:paddingBottom="5dp">

            <Button
                android1:id="@+id/prev"
                android1:layout_width="60dp"
                android1:layout_height="35dp"
                android1:layout_gravity="left|bottom"

                android1:layout_marginLeft="80dp"
                android1:layout_marginRight="50dp"

                android1:background="#222"
                android1:text="prev"
                android1:textColor="@color/textcolor"
                android1:visibility="visible" />

            <Button
                android1:id="@+id/forward"
                android1:layout_width="60dp"
                android1:layout_height="35dp"
                android1:layout_marginLeft="20dp"
                android1:background="#222"
                android1:gravity="center"
                android1:text="next"
                android1:textColor="@color/textcolor"

                />

        </LinearLayout>

    </LinearLayout>

